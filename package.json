{
  "name": "pentara-app",
  "version": "1.0.0",
  "description": "Pentara - Five voices. One circle. Clarity on demand.",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:web": "cd packages/web && npm run dev",
    "dev:mobile": "cd packages/mobile && npm start",
    "dev:api": "cd packages/api && npm run dev",
    "build:shared": "cd packages/shared && npm run build",
    "build:web": "npm run build:shared && npm run build --prefix packages/web",
    "build:mobile": "cd packages/mobile && npm run build",
    "build:api": "cd packages/api && npm run build",
    "install:all": "npm install && npm run install:shared && npm run install:web && npm run install:mobile && npm run install:api",
    "install:shared": "cd packages/shared && npm install",
    "install:web": "cd packages/web && npm install",
    "install:mobile": "cd packages/mobile && npm install",
    "install:api": "cd packages/api && npm install",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  }
}
